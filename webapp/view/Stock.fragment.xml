<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form">
    <form:SimpleForm
        visible="false"
        layout="ResponsiveGridLayout"
        columnsXL="4" columnsL="4" columnsM="2" columnsS="1"
        labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12"
        breakpointL="500" breakpointM="250"
        >

        <core:Title text="Stock Atual" />

            <Label text="Avaliação"/>
            <Text
                text="{path: 'stock/Avaliacao', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} BRL"/>

        <core:Title text="" />

             <Label text="DDE"/>
            <Text
                text="{path: 'stock/DDE', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} dias"/>

        <core:Title text="" />

             <Label text="Quantidade Loja"/>
            <Text
                text="{path: 'stock/QuantidadeLoja', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} UN"/>

        <core:Title text="" />

             <Label text="Quantidade CD"/>
            <Text
                text="{path: 'stock/QuantidadeCD', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} UN"/>

    </form:SimpleForm>

       <Table alternateRowColors="true" width="100%" showSeparators="All" growing="false" items="{path:'stock', templateShareable:true, parameters:{expand:'material' } }" >
            <columns>
                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="UF Venda" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>
                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="Cod. Material" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>
                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="Material" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>

                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="Stock Atual" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>
                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="DDE" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>
                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="Quantidade Loja" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>
                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="Quantidade CD" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>

            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <ObjectIdentifier title="{CentroID}" text="" titleActive="false" visible="true"/>
                        <ObjectIdentifier title="{
                            path: 'material/ID',
                            type: 'sap.ui.model.odata.type.String',
                            constraints: {
                                isDigitSequence : true,
                                maxLength : 18
                                }
                            }"
                            text="" titleActive="false" visible="true"/>
                        <Text text="{material/Nome}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"/>

                        <ObjectNumber
                            number="{path: 'Avaliacao', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}"
                            unit="BRL" emphasized="true"
                            />
                        <ObjectNumber
                            number="{path: 'DDE', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}"
                            unit="dias" emphasized="true"
                            />
                        <ObjectNumber
                            number="{path: 'QuantidadeLoja', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}"
                            unit="UN" emphasized="true"
                            />
                        <ObjectNumber
                            number="{path: 'QuantidadeCD', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}"
                            unit="UN" emphasized="true"
                            />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>



</core:FragmentDefinition>

