<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form">
    <form:SimpleForm
        layout="ResponsiveGridLayout"
        columnsXL="4" columnsL="4" columnsM="2" columnsS="1"
        labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12"
        breakpointL="500" breakpointM="250"
        >

        <core:Title text="Stock Atual" />

            <Label text="Avaliação"/>
            <Text
                text="{path: 'stock/Avaliacao', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} BRL"/>

        <core:Title text="" />

             <Label text="DDE"/>
            <Text
                text="{path: 'stock/DDE', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} dias"/>

        <core:Title text="" />

             <Label text="Quantidade Loja"/>
            <!--
                @todo Adicionar QuantidadeLoja ao modelo 
            -->
            <Text
                text="{path: 'stock/QuantidadeLoja', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} UN"/>

        <core:Title text="" />

             <Label text="Quantidade CD"/>
            <!--
                @todo Adicionar QuantidadeCD ao modelo 
            -->
            <Text
                text="{path: 'stock/QuantidadeCD', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} UN"/>

    </form:SimpleForm>
</core:FragmentDefinition>

