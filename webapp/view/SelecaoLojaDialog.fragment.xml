<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <Dialog
        id="addItemAbrangenciaDialog"
        title="Adicionar {abrangencia/Descricao}"
        contentWidth="400px"
        contentHeight="500px"
        >

        <beginButton>
            <Button text="Selecionar" type="Emphasized"
            press="onSelecionar" />
        </beginButton>

        <endButton>
            <Button text="Cancelar" press="onFechar" />
        </endButton>

        <content>

            <FacetFilter
                id="facetFilterLojas"
                type="Simple"
                showPersonalization="true"
                showReset="true"
                reset="lojasFilterReset"
                confirm="lojasFilterConfirm"
                lists="">
                <lists>
                    <FacetFilterList
                        title="UF"
                        key="UFID"
                        mode="MultiSelect"
                        items="{path:'bandeira/ufs', templateShareable: 'true'}"
                        >
                        <items>
                            <FacetFilterItem
                                text="{ID}"
                                key="{ID}"
                                />
                        </items>
                    </FacetFilterList>
                    <!--
                    <FacetFilterList
                        title="Grupos Lojas"
                        key="grupoLoja"
                        mode="MultiSelect"
                        items="{path:'/GrupoLojaSet', templateShareable: 'true'}"
                        growing='true'
                        growingThreshold='15'
                        growingScrollToLoad='true'
                        >
                        <items>
                            <FacetFilterItem
                                text="{Descricao}"
                                key="{ID}"
                                />
                        </items>
                    </FacetFilterList>
                    -->
                </lists>
            </FacetFilter>

            <List
                growing="true"
                growingThreshold="30"
                growingScrollToLoad="true"
                mode="MultiSelect"
                id="lojasList"
                items="{bandeira/lojas}" >
                <StandardListItem
                    title="{ID}"
                    description="{Nome} [{UFID}]"
                    type="Active"
                    />
            </List>
        </content>
    </Dialog>
</core:FragmentDefinition>



