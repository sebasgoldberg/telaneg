                                    formatOptions: { maxFractionDigits: 2 }
                                    } %"
                                state="{
                                    parts: [ {path: 'simulacao/IC'} ],
                                    formatter: '.formatter.icStatus'
                                    }" />


                        <core:Title text="Info Atual" />
                        <Label text="Margem Teorica" />
