                                    type: 'sap.ui.model.type.Float',
                                    formatOptions: { maxFractionDigits: 2 }
                                    }"
                                    fieldWidth="70%"
                                    description="BRL"
                                    />


                    <core:Title text="Input Venda" />
                    <Label text="Preço de Venda"/>
                            <Input value="{
                                path: 'simulacao/PrecoVenda',
                                type: 'sap.ui.model.type.Float',
                                formatOptions: { maxFractionDigits: 2 }
                                }"
                                fieldWidth="70%"
                                description="BRL"
                                />

                      <Label text="Previsão de Venda" />
                        <!--
                        @todo: Adicionar Atributo ao Modelo
                        -->
                                <Input value="{
                                    path: 'simulacao/PrevisaoVenda',
                                    type: 'sap.ui.model.type.Float',
                                    formatOptions: { maxFractionDigits: 2 }
                                    }"
                                    fieldWidth="70%"
                                    description="UN"
                                    />


                    <core:Title text="Simulado" />
                    <Label text="PMZ Novo" />
                        <!--
                        @todo: Alterar no modelo.
                        -->
                        <ObjectStatus
                            text="{
                                path: 'simulacao/PMZReposicao',
                                type: 'sap.ui.model.type.Float',
                                formatOptions: { maxFractionDigits: 2 }
                                } BRL"
                                />

                    <Label text="PMZ Médio" />
                        <!--
                        @todo: Alterar no modelo.
                        -->
                        <ObjectStatus
                            text="{
                                path: 'simulacao/PMZLoja',
                                type: 'sap.ui.model.type.Float',
                                formatOptions: { maxFractionDigits: 2 }
                                } BRL"
                                />

                    <Label text="Margem 1"/>
                            <ObjectStatus
                                text="{
                                    path: 'simulacao/Margem1',
                                    type: 'sap.ui.model.type.Float',
                                    formatOptions: { maxFractionDigits: 2 }
                                    } %"
                                state="{
                                    parts: [ {path: 'simulacao/Margem1'}, {path: 'informacao/MargemTeorica'} ],
                                    formatter: '.formatter.margemStatus'
                                    }"
                                    />

                    <Label text="Margem 2" />
                        <ObjectStatus
                            text="{
                                path: 'simulacao/Margem2',
                                type: 'sap.ui.model.type.Float',
                                formatOptions: { maxFractionDigits: 2 }
                                } %"
                            state="{
                                parts: [ {path: 'simulacao/Margem2'}, {path: 'informacao/MargemTeorica'}],
                                formatter: '.formatter.margemStatus'
                                }" />

                         <Label text="Valor Total Pedido" />
                            <!--
                            @todo: Calcular (Custos + Impostos) * Preço de Compra
                            -->
                            <Text
                                text="{
                                    path: 'stock/Avaliacao',
                                    type: 'sap.ui.model.type.Float',
                                    formatOptions: { maxFractionDigits: 2 }
                                    } BRL" />

                          <Label text="Previsão de Venda" />
                            <!--
                            @todo: Calcular previsão de venda [UN] * Preço de Venda
                            -->
                            <Text
                                text="{
                                    path: 'stock/Avaliacao',
                                    type: 'sap.ui.model.type.Float',
                                    formatOptions: { maxFractionDigits: 2 }
                                    } " />

