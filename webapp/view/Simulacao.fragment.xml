<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" 
    >

    <layout:Grid defaultSpan="L2 M4 S6" class="sapUiSmallMarginTop sapUiContentPadding">

        <layout:VerticalLayout
                class="sapUiMediumMarginEnd">
    <Label text="Preço de Compra" />
            <Input value="{
                path: 'simulacao/PrecoCompra',
                type: 'sap.ui.model.odata.type.Decimal',
                constraints: { scale: 2 }
                }"
                fieldWidth="70%"
                description="BRL"
                submit="realizarSimulacao"
                />
        </layout:VerticalLayout>

        <layout:VerticalLayout
                class="sapUiMediumMarginEnd">
    <Label text="Volume"/>
            <Input value="{
                path: 'simulacao/Volumem',
                type: 'sap.ui.model.odata.type.Decimal',
                constraints: { scale: 2 }
                }"
                fieldWidth="70%"
                description="UN"
                enabled="false"
                />
        </layout:VerticalLayout>

        <layout:VerticalLayout
                class="sapUiMediumMarginEnd">
    <Label text="Recomposição"/>
            <Input value="{
                path: 'simulacao/Recomposicao',
                type: 'sap.ui.model.odata.type.Decimal',
                constraints: { scale: 2 }
                }"
                submit="realizarSimulacao"
                fieldWidth="70%"
                description="BRL"
                />
        </layout:VerticalLayout>

        <layout:VerticalLayout
                class="sapUiMediumMarginEnd">
      <Label text="Desconto" />
                <Input value="{
                    path: 'simulacao/Desconto',
                    type: 'sap.ui.model.odata.type.Decimal',
                    constraints: { scale: 2 }
                    }"
                    fieldWidth="70%"
                    description="%"
                    submit="realizarSimulacao"
                    />
        </layout:VerticalLayout>

        <layout:VerticalLayout
                class="sapUiMediumMarginEnd">
      <Label text="Despesas Acessorias" />
                <Input value="{
                    path: 'simulacao/DespesasAcessorias',
                    type: 'sap.ui.model.odata.type.Decimal',
                    constraints: { scale: 2 }
                    }"
                    submit="realizarSimulacao"
                    fieldWidth="70%"
                    description="BRL"
                    />
        </layout:VerticalLayout>

    </layout:Grid>

</core:FragmentDefinition>

