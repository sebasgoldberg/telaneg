<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form">

    <form:SimpleForm
        layout="ResponsiveGridLayout"
        columnsXL="4" columnsL="4" columnsM="2" columnsS="1"
        labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12"
        breakpointL="500" breakpointM="250"
        >

    <core:Title text="Input Compra" />
    <Label text="Preço de Compra" />
            <Input value="{
                path: 'simulacao/PrecoCompra',
                type: 'sap.ui.model.type.Float',
                formatOptions: { maxFractionDigits: 2 }
                }"
                fieldWidth="70%"
                description="BRL"
                submit="realizarSimulacao"
                />

    <Label text="Volumem"/>
            <Input value="{
                path: 'simulacao/Volumem',
                type: 'sap.ui.model.type.Float',
                formatOptions: { maxFractionDigits: 2 }
                }"
                submit="realizarSimulacao"
                fieldWidth="70%"
                description="UN"
                />

    <Label text="Recomposição"/>
            <Input value="{
                path: 'simulacao/Recomposicao',
                type: 'sap.ui.model.type.Float',
                formatOptions: { maxFractionDigits: 2 }
                }"
                submit="realizarSimulacao"
                fieldWidth="70%"
                description="BRL"
                />

      <Label text="Desconto" />
                <Input value="{
                    path: 'simulacao/Desconto',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    }"
                    fieldWidth="70%"
                    description="%"
                    submit="realizarSimulacao"
                    />

      <Label text="Despesas Acessorias" />
                <Input value="{
                    path: 'simulacao/DespesasAcessorias',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    }"
                    submit="realizarSimulacao"
                    fieldWidth="70%"
                    description="BRL"
                    />


    <core:Title text="Input Venda" />
    <Label text="Preço de Venda"/>
            <Input value="{
                path: 'simulacao/PrecoVenda',
                type: 'sap.ui.model.type.Float',
                formatOptions: { maxFractionDigits: 2 }
                }"
                submit="realizarSimulacao"
                fieldWidth="70%"
                description="BRL"
                />

      <Label text="Previsão de Venda" />
                <Input value="{
                    path: 'simulacao/PrevisaoVenda',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    }"
                    submit="realizarSimulacao"
                    fieldWidth="70%"
                    description="UN"
                    />


    <core:Title text="Simulado" />
    <Label text="Custo" />
        <ObjectStatus
            text="{
                path: 'simulacao/Custo',
                type: 'sap.ui.model.type.Float',
                formatOptions: { maxFractionDigits: 2 }
                } BRL"
            state="{
                parts: [ {path: 'simulacao/Custo'}, {path: 'informacao/Custo'} ],
                formatter: '.formatter.warningIfSecondLowThanFirst'
                }"
                />

    <Label text="PMZ Novo" />
        <ObjectStatus
            text="{
                path: 'simulacao/PMZNovo',
                type: 'sap.ui.model.type.Float',
                formatOptions: { maxFractionDigits: 2 }
                } BRL"
            state="{
                parts: [ {path: 'simulacao/PMZNovo'}, {path: 'informacao/PMZNovo'} ],
                formatter: '.formatter.warningIfSecondLowThanFirst'
                }"
                />

    <Label text="PMZ Médio" />
        <ObjectStatus
            text="{
                path: 'simulacao/PMZMedio',
                type: 'sap.ui.model.type.Float',
                formatOptions: { maxFractionDigits: 2 }
                } BRL"
            state="{
                parts: [ {path: 'simulacao/PMZMedio'}, {path: 'informacao/PMZMedio'} ],
                formatter: '.formatter.warningIfSecondLowThanFirst'
                }"
                />

    <Label text="Margem 1"/>
            <ObjectStatus
                text="{
                    path: 'simulacao/Margem1',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    } %"
                state="{
                    parts: [ {path: 'simulacao/Margem1'}, {path: 'informacao/MargemTeorica'} ],
                    formatter: '.formatter.margemStatus'
                    }"
                    />

    <Label text="Margem 2" />
        <ObjectStatus
            text="{
                path: 'simulacao/Margem2',
                type: 'sap.ui.model.type.Float',
                formatOptions: { maxFractionDigits: 2 }
                } %"
            state="{
                parts: [ {path: 'simulacao/Margem2'}, {path: 'informacao/MargemTeorica'}],
                formatter: '.formatter.margemStatus'
                }" />

         <Label text="Valor Total Pedido" />
            <ObjectStatus
                text="{
                    path: 'simulacao/ValorTotalPedido',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    } BRL"
            state="{
                parts: [ {path: 'simulacao/PrevisaoVendaDinheiro'}, {path: 'simulacao/ValorTotalPedido'}],
                formatter: '.formatter.margemStatus'
                }" />

          <Label text="Previsão de Venda" />
            <ObjectStatus
                text="{
                    path: 'simulacao/PrevisaoVendaDinheiro',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    } BRL"
            state="{
                parts: [ {path: 'simulacao/PrevisaoVendaDinheiro'}, {path: 'simulacao/ValorTotalPedido'}],
                formatter: '.formatter.margemStatus'
                }" />


        <Label text="IC" />
            <ObjectStatus
                text="{
                    path: 'simulacao/IC',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    } %"
                state="{
                    parts: [ {path: 'simulacao/IC'} ],
                    formatter: '.formatter.icStatus'
                    }" />


        <core:Title text="Info Atual" />

        <Label text="Custo" />
            <Text
                text="{
                    path: 'informacao/Custo',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    } BRL" />
         <Label text="PMZ Novo" />
            <Text
                text="{
                    path: 'informacao/PMZNovo',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    } BRL" />
        <Label text="PMZ Médio" />
            <Text
                text="{
                    path: 'informacao/PMZMedio',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    } BRL" />
        <Label text="Margem 1" />
            <Text
                text="{
                    path: 'informacao/Margem1',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    } %" />
         <Label text="Margem Teorica" />
            <Text
                text="{
                    path: 'informacao/MargemTeorica',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    } %" />
        <Label text="Preço Compra" />
            <Text
                text="{
                    path: 'informacao/PrecoCompra',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    } BRL" />
         <Label text="Preço Venda" />
            <Text
                text="{
                    path: 'informacao/PrecoVenda',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    } BRL" />
        <Label text="IC" />
            <Text
                text="{
                    path: 'informacao/IC',
                    type: 'sap.ui.model.type.Float',
                    formatOptions: { maxFractionDigits: 2 }
                    } %" />

    </form:SimpleForm>

</core:FragmentDefinition>

