<mvc:View
    controllerName="simplifique.telaneg.controller.TaskDetail"
    xmlns:sim="simplifique.telaneg.control" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <uxap:ObjectPageLayout showTitleInHeaderContent="false" showHeaderContent="true" showEditHeaderButton="false" showFooter="true" class="sapUiSizeCompact">
        <uxap:headerTitle>
            <uxap:ObjectPageHeader objectTitle="{Descricao}" objectSubtitle="{ID}{=${Estipulacao}?', Estipulação '+${Estipulacao}:''}" isObjectIconAlwaysVisible="false" isObjectTitleAlwaysVisible="true" isObjectSubtitleAlwaysVisible="true" showPlaceholder="false">
                <uxap:navigationBar>
                    <Bar>
                        <!--
                        <contentLeft>
                            <Button type="Back" press="_onFioriObjectPageHeaderPress"/>
                        </contentLeft>
                        -->
                        <contentMiddle>
                            <Title text="{tipoNegociacao/Descricao}"/>
                        </contentMiddle>
                        <contentRight/>
                    </Bar>
                </uxap:navigationBar>
                <uxap:actions>
                    <Button text="Anexar" icon="sap-icon://attachment" iconFirst="true" type="Transparent" enabled="true">
                        <layoutData>
                            <OverflowToolbarLayoutData moveToOverflow="true"/>
                        </layoutData>
                    </Button>
                    <Button text="PDF" icon="sap-icon://download" iconFirst="true" type="Emphasized" enabled="true">
                        <layoutData>
                            <OverflowToolbarLayoutData moveToOverflow="true"/>
                        </layoutData>
                    </Button>
                </uxap:actions>
                <uxap:breadCrumbsLinks/>
            </uxap:ObjectPageHeader>
        </uxap:headerTitle>
        <uxap:headerContent>

            <VBox>
                <items>
                    <Title text="{fornecedor/ID}" margin-right="0.5rem"/>
                    <Text text="{fornecedor/Nome}" class="sapMTitleStyleH3" press="_onFioriObjectPageHeaderContactPress"/>
                </items>
            </VBox>
            <VBox>
                <items>
                    <Title text="Bonificação"/>
                    <ObjectNumber number="{
                        path: 'Bonificacao',
                        type: 'sap.ui.model.odata.type.Decimal',
                        constraints: { scale: 2 }
                        }" unit="BRL" state="Success"/>
                </items>
            </VBox>
            <VBox>
                <items>
                    <Title text="Status"/>
                    <ObjectNumber number="{status/Descricao}" unit="" state="Success"/>
                </items>
            </VBox>
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection title="Informações Gerais">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Informações Gerais">
                        <uxap:blocks>
                            <core:Fragment fragmentName="simplifique.telaneg.view.task.InformacaoGeral" type="XML" />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection title="Abrangência">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Abrangência">
                        <uxap:blocks>
                            <core:Fragment fragmentName="simplifique.telaneg.view.task.Abrangencia" type="XML" />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection title="Mercadorias">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Mercadorias">
                        <uxap:blocks>
                            <Table width="100%" growing="true" growingScrollToLoad="true" growingThreshold="25" mode="MultiSelect" items="{path:'items', templateShareable:true, parameters:{expand:'material,simulacao'}}">
                                <headerToolbar>
                                    <OverflowToolbar design="Transparent">
                                        <content>
                                            <ToolbarSpacer/>
                                            <Button text="Adicionar" icon="sap-icon://add" iconFirst="true" type="Transparent" press="onAdicionarMercadoria">
                                                <layoutData>
                                                    <OverflowToolbarLayoutData moveToOverflow="true"/>
                                                </layoutData>
                                            </Button>
                                            <Button text="" icon="sap-icon://delete" iconFirst="false" type="Transparent">
                                                <layoutData>
                                                    <OverflowToolbarLayoutData moveToOverflow="true"/>
                                                </layoutData>
                                            </Button>
                                            <Button icon="sap-icon://action-settings" type="Transparent">
                                                <layoutData>
                                                    <OverflowToolbarLayoutData moveToOverflow="true"/>
                                                </layoutData>
                                            </Button>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column hAlign="Left" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                        <header>
                                            <Text text="UF"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Left" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                        <header>
                                            <Text text="Mercadoria"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Left" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                        <header>
                                            <Text text="Descrição"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Left" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                        <header>
                                            <Text text="UMV"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Right" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                        <header>
                                            <Text text="Preço Venda"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Right" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                        <header>
                                            <Text text="PMZ"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Right" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                        <header>
                                            <Text text="Margem PDV"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Right" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                        <header>
                                            <Text text="Recomp."/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Right" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                        <header>
                                            <Text text="Margem 2 Simulada"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Right" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                        <header>
                                            <Text text="Menor Preço Mercado"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Right" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                        <header>
                                            <Text text="IC"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                        <header>
                                            <Text text=""/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                        <header>
                                            <Text text=""/>
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Active">
                                        <cells>
                                            <Text text="{UF/Descricao}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>

                                            <HBox>
                                                <core:Icon src="sap-icon://add" height="48px" width="48px" visible="true"/>
                                                <Text text="{material/ID}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            </HBox>

                                            <Text text="{material/Descricao}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            <Text text="{material/UMB}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            <Text text="{simulacao/PrecoVenda} BRL" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            <Text text="{simulacao/PMZNovo} BRL" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            <Text text="{nossoPricing/MargemPDV} %" width="auto" maxLines="1" wrapping="false" textAlign="Right" textDirection="Inherit" visible="true"/>
                                            <Text text="{simulacao/Recomposicao} BRL" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            <Text text="{simulacao/Margem2} %" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            <Text text="{nossoPricing/PrecoMercado}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            <Text text="{simulacao/IC} %" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            <core:Icon src="sap-icon://line-chart" size="16px" height="48px" width="48px" hoverColor="#386084" visible="true" tooltip="Vendas" press="_onIconPress"/>
                                            <core:Icon src="sap-icon://shipping-status" height="48px" width="48px" hoverColor="#386084" visible="true" tooltip="Estoque" press="_onIconPress1"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection title="Contrato">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Contrato">
                        <uxap:blocks>
                            <layout:Grid defaultSpan="XL12 L12 M12 S12">
                                <layout:content>
                                    <form:Form>
                                        <form:layout>
                                            <form:ResponsiveGridLayout labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4" columnsL="3" columnsM="2" singleContainerFullSize="false"/>
                                        </form:layout>
                                        <form:formContainers>
                                            <form:FormContainer title="Informações Básicas">
                                                <form:formElements>
                                                    <form:FormElement>
                                                        <form:label>
                                                            <Label text="Prazo de Pagamento" required="false"/>
                                                        </form:label>
                                                        <form:fields>
                                                            <ObjectStatus text="Z088 - 30 dias 100% sem desconto"/>
                                                        </form:fields>
                                                    </form:FormElement>
                                                    <form:FormElement>
                                                        <form:label>
                                                            <Label text="Tipo de Faturamento" required="false"/>
                                                        </form:label>
                                                        <form:fields>
                                                            <ObjectStatus text="Liquido"/>
                                                        </form:fields>
                                                    </form:FormElement>
                                                </form:formElements>
                                            </form:FormContainer>
                                        </form:formContainers>
                                    </form:Form>
                                </layout:content>
                            </layout:Grid>
                            <Table width="100%" growing="true" growingScrollToLoad="true" growingThreshold="25" mode="None">
                                <headerToolbar>
                                    <OverflowToolbar design="Transparent">
                                        <content>
                                            <ToolbarSpacer/>
                                            <Button icon="sap-icon://action-settings" type="Transparent">
                                                <layoutData>
                                                    <OverflowToolbarLayoutData moveToOverflow="true"/>
                                                </layoutData>
                                            </Button>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column width="auto" minScreenWidth="Phone">
                                        <header>
                                            <Text text="Sub-Sortimento" width="auto"/>
                                        </header>
                                    </Column>
                                    <Column width="auto" minScreenWidth="Tablet" demandPopin="true">
                                        <header>
                                            <Text text="Descrição" width="auto"/>
                                        </header>
                                    </Column>
                                    <Column width="auto" minScreenWidth="Phone">
                                        <header>
                                            <Text text="Prazo" width="auto"/>
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Active">
                                        <cells>
                                            <ObjectIdentifier title="" text="B00181"/>
                                            <ObjectStatus text="Laticinios"/>
                                            <ObjectStatus text="15 dias"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                            <layout:Grid defaultSpan="XL12 L12 M12 S12">
                                <layout:content>
                                    <form:Form>
                                        <form:layout>
                                            <form:ResponsiveGridLayout labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4" columnsL="3" columnsM="2" singleContainerFullSize="false"/>
                                        </form:layout>
                                        <form:formContainers>
                                            <form:FormContainer title="">
                                                <form:formElements>
                                                    <form:FormElement>
                                                        <form:label>
                                                            <Label text="" required="false"/>
                                                        </form:label>
                                                        <form:fields>
                                                            <ObjectStatus text=""/>
                                                        </form:fields>
                                                    </form:FormElement>
                                                </form:formElements>
                                            </form:FormContainer>
                                        </form:formContainers>
                                    </form:Form>
                                </layout:content>
                            </layout:Grid>
                            <Table width="100%" growing="true" growingScrollToLoad="true" growingThreshold="25" mode="None">
                                <headerToolbar>
                                    <OverflowToolbar design="Transparent">
                                        <content>
                                            <ToolbarSpacer/>
                                            <Button icon="sap-icon://action-settings" type="Transparent">
                                                <layoutData>
                                                    <OverflowToolbarLayoutData moveToOverflow="true"/>
                                                </layoutData>
                                            </Button>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column width="auto" minScreenWidth="Phone">
                                        <header>
                                            <Text text="Cond." width="auto"/>
                                        </header>
                                    </Column>
                                    <Column width="auto" minScreenWidth="Tablet" demandPopin="true">
                                        <header>
                                            <Text text="Desc." width="auto"/>
                                        </header>
                                    </Column>
                                    <Column width="auto" minScreenWidth="Phone">
                                        <header>
                                            <Text text="Nivel" width="auto"/>
                                        </header>
                                    </Column>
                                    <Column width="auto" minScreenWidth="Phone">
                                        <header>
                                            <Text text="Nome" width="auto"/>
                                        </header>
                                    </Column>
                                    <Column width="auto" hAlign="Right" minScreenWidth="Phone">
                                        <header>
                                            <Text text="Perc." width="auto"/>
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Active">
                                        <cells>
                                            <ObjectIdentifier title="" text="Z084"/>
                                            <ObjectStatus text="Laticinios"/>
                                            <ObjectStatus text="17"/>
                                            <ObjectStatus text="Leites"/>
                                            <HBox alignItems="Stretch" justifyContent="End" alignContent="Stretch">
                                                <items>
                                                    <ObjectNumber number="0,4" unit="%" emphasized="false"/>
                                                </items>
                                            </HBox>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                            <layout:Grid defaultSpan="XL12 L12 M12 S12">
                                <layout:content>
                                    <form:Form>
                                        <form:layout>
                                            <form:ResponsiveGridLayout labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4" columnsL="3" columnsM="2" singleContainerFullSize="false"/>
                                        </form:layout>
                                        <form:formContainers>
                                            <form:FormContainer title="">
                                                <form:formElements>
                                                    <form:FormElement>
                                                        <form:label>
                                                            <Label text="" required="false"/>
                                                        </form:label>
                                                        <form:fields>
                                                            <ObjectStatus text=""/>
                                                        </form:fields>
                                                    </form:FormElement>
                                                </form:formElements>
                                            </form:FormContainer>
                                        </form:formContainers>
                                    </form:Form>
                                </layout:content>
                            </layout:Grid>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
        <uxap:footer>
            <OverflowToolbar design="auto">
                <content>
                    <Button
                        icon="sap-icon://message-popup"
                        text="{= ${message>/}.length }"
                        visible="{= ${message>/}.length > 0 }"
                        type="Emphasized"
                        press="handleMessagePopoverPress"/>
                    <ToolbarSpacer/>
                    <Button text="Cancel" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress"/>
                    <Button text="Salvar" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress1"/>
                    <Button text="Finalizar" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                </content>
            </OverflowToolbar>
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>

