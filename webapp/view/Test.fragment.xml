<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:sim="simplifique.telaneg.control" 
    xmlns:core="sap.ui.core">

        <sim:PopoverSteps
            finish="onFinish"
            enteringLastStep="onEnteringLastStep"
            title="Adicionar Itens"
            class="sapUiPopupWithPadding"
            nextText="Seguinte"
            finishText="Adicionar"
            cancelText="Cancelar"
            contentWidth="480px"
            contentHeight="480px"
            placement='Left'>

            <Page
                title="Seleção de Fornecedores"
                >

                <sim:SearchAndSelect
                    items="{/FornecedorSet}"
                    filterFields="eq::ID, cp::Nome"
                    quanSelText="Fornecedores selecionados"
                    id='fornecedoresSearchAndSelect'
                    >

                    <StandardListItem
                        title="{ID}"
                        description="{Nome}"
                        />

                </sim:SearchAndSelect>

            </Page>

            <Page
                title="Selecao de Materiais"
                >

                <sim:SearchAndSelect
                    items="{/MaterialSet}"
                    filterFields="eq::ID, cp::Nome"
                    quanSelText="Materiais selecionados"
                    id='materiaisSearchAndSelect'
                    >

                    <StandardListItem
                        title="{ID}"
                        description="{Nome}"
                        />

                </sim:SearchAndSelect>

            </Page>


            <Page
                title="Selecao de UFs"
                >

                <sim:SearchAndSelect
                    items="{/UFSet}"
                    filterFields="eq::Centro, cp::Nome, eq::ID"
                    quanSelText="UFs selecionadas"
                    id='UFsSearchAndSelect'
                    >

                    <StandardListItem
                        title="{Centro}"
                        description="[{ID}] {Nome}"
                        />

                </sim:SearchAndSelect>

            </Page>

            <Page
                title="Selecao de Itens a Adicionar."
                >
                    <subHeader>
                        <Toolbar>
                            <SearchField
                                width="100%" />
                        </Toolbar>
                    </subHeader>

                    <Table alternateRowColors="true" mode="MultiSelect" showSeparators="All" growing="false" items="{view>/SelecaoLivre/itens}" id='SelecaoLivreItensTable'>

                        <columns>

                            <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                <header>
                                    <Text text="Fornecedor" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                                </header>
                                <footer/>
                            </Column>

                            <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                <header>
                                    <Text text="Material" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                                </header>
                                <footer/>
                            </Column>

                            <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                                <header>
                                    <Text text="UF" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                                </header>
                                <footer/>
                            </Column>

                        </columns>

                        <items>

                            <ColumnListItem >

                                <cells>

                                    <Text text="{view>Fornecedor/Nome}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
                                    <Text text="{view>Material/Nome}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
                                    <Text text="{view>UF/Centro}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"/>

                                </cells>
                            </ColumnListItem>

                        </items>
                    </Table>


            </Page>

        </sim:PopoverSteps>

</core:FragmentDefinition>
