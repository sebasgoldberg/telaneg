<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >

    <Table 
    keyboardMode="Edit"
    alternateRowColors="true" showSeparators="All" growing="false" items="{path:'fornecedoresAdicionais', templateShareable:true}"
    id="fornecedoresAdicionaisTable" mode="MultiSelect" 
    >
        <headerToolbar>
            <Toolbar width="auto" height="46px" design="Transparent" visible="true" enabled="true">
                <content>
                    <Title text="Fornecedores" titleStyle="Auto" width="auto" textAlign="Begin" visible="true"/>
                    <ToolbarSpacer width=""/>
                    <Button icon="sap-icon://add" press="onAddFornecedorAdicional"/>
                    <Button icon="sap-icon://delete" press="onDeleteFornecedorAdicional"/>
                </content>
                <tooltip/>
            </Toolbar>
        </headerToolbar>
        <columns>

            <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="Cod. Fornecedor" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                </header>
                <footer/>
            </Column>

            <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="Fornecedor" width="auto" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
                </header>
                <footer/>
            </Column>

            <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="CNPJ" width="auto" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
                </header>
                <footer/>
            </Column>

        </columns>
        <items>
            <ColumnListItem>
                <cells>

                    <ObjectIdentifier title="{ID}"
                        text="" titleActive="false" visible="true"/>

                    <Text text="{Nome}" wrapping="true" />

                    <Text text="{CNPJ}" wrapping="true" />

                </cells>
            </ColumnListItem>
        </items>
    </Table>

</core:FragmentDefinition>

