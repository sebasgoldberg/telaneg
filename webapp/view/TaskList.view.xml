<mvc:View
    controllerName="simplifique.telaneg.controller.TaskList"
    xmlns:sim="simplifique.telaneg.control" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:variants="sap.ui.comp.variants"
    xmlns="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core">

    <f:DynamicPage headerExpanded="true" showFooter="false" class="sapUiSizeCompact">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{Descricao}"/>
                </f:heading>
                <f:actions>

                    <Button text="Copiar" icon="sap-icon://add-coursebook" press=""/>
                    <sim:ButtonPopover text="Novo Acordo" icon="sap-icon://add" type="Emphasized" placement="Bottom" >
                        <core:Fragment fragmentName="simplifique.telaneg.view.NovoAcordoPopover" type="XML" />
                    </sim:ButtonPopover>

                    <!--
                    <ToolbarSpacer/>
                    <Button icon="sap-icon://action" type="Transparent"/>
                    -->
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    
                    <fb:FilterBar id="ListReportFilterBar" useToolbar="false" showGoOnFB="true" searchEnabled="true" showFilterConfiguration="false"
                        search="onSearch"
                        >
                        <fb:filterItems>
                            <fb:FilterItem label="Descrição" name="descricaoFilter">
                                <fb:control>
                                    <SearchField value="{view>/filter/descricao}" search="onSearch"/>
                                </fb:control>
                            </fb:FilterItem>
                            <fb:FilterItem label="Status" name="statusFilter">
                                <fb:control>

                                    <MultiComboBox
                                        selectionFinish="onSearch"
                                        selectedKeys="{view>/filter/status}"
                                        width="1000px"
                                        enableMultiLineMode="true"
                                        items="{/StatusSet}">
                                        <core:Item key="{ID}" text="{Descricao}" />
                                    </MultiComboBox>

                                </fb:control>
                            </fb:FilterItem>
                            <fb:FilterItem label="Fornecedor" name="fornecedorFilter">
                                <fb:control>

                                    <MultiInput 
                                        submit="onSearch"
                                        id="multiInputFornecedor"
                                        enableMultiLineMode="true"
                                        suggest="suggestFornecedores"
                                        suggestionItems="{/FornecedorSet}"
                                        maxSuggestionWidth="500px"
                                        showValueHelp="false">
                                        <core:ListItem key="{ID}" text="{Nome}" additionalText="{ID}" />
                                    </MultiInput>

                                </fb:control>
                            </fb:FilterItem>
                            <fb:FilterItem label="Vencimento" name="vencimentoFilter">
                                <fb:control>
                                    <DateRangeSelection
                                        id="DRS2"
                                        dateValue="{view>/filter/dataDe}"
                                        secondDateValue="{view>/filter/dataAte}"
                                        change="onSearch"
                                    />
                                </fb:control>
                            </fb:FilterItem>
                        </fb:filterItems>
                    </fb:FilterBar>

                    <!--
                    <FacetFilter
                        id="idFacetFilter"
                        type="Simple"
                        showPersonalization="true"
                        showReset="true"
                        reset="handleFacetFilterReset"
                        confirm="handleConfirm"
                        lists="">
                        <lists>
                            <FacetFilterList
                                title="Status"
                                key="status"
                                mode="MultiSelect"
                                items="{path:'/StatusSet/', templateShareable: 'true'}"
                                >
                                <items>
                                    <FacetFilterItem
                                        text="{Descricao}"
                                        key="{ID}"
                                        />
                                </items>
                            </FacetFilterList>
                            <FacetFilterList
                                title="Fornecedor"
                                key="fornecedor"
                                mode="MultiSelect"
                                items="{path:'/FornecedorSet', templateShareable: 'true'}"
                                growing='true'
                                growingThreshold='15'
                                growingScrollToLoad='true'
                                >
                                <items>
                                    <FacetFilterItem
                                        text="{Nome} [{UF}]"
                                        key="{ID}"
                                        />
                                </items>
                            </FacetFilterList>
                        </lists>
                    </FacetFilter>
                    -->

                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox fitContainer="true">
                <items>
                    <Table
                        id="negociacoesTable"
                        growing="true" growingScrollToLoad="true" growingThreshold="25" mode="SingleSelectMaster" items="{path:'/NegociacaoSet', templateShareable:true, parameters:{expand:'fornecedor,status'}}">
                        <headerToolbar>
                            <OverflowToolbar design="Transparent">
                                <content>
                                    <Title textAlign="Begin" text="Documentos de {Descricao}"/>
                                    <ToolbarSpacer/>
                                </content>
                            </OverflowToolbar>
                        </headerToolbar>
                        <columns>
                            <Column minScreenWidth="Phone">
                                <header>
                                    <Text text="Número"/>
                                </header>
                            </Column>
                            <Column minScreenWidth="Desktop" demandPopin="true">
                                <header>
                                    <Text text="Fornecedor"/>
                                </header>
                            </Column>
                            <Column width="20%" minScreenWidth="Phone">
                                <header>
                                    <Text text="Nome"/>
                                </header>
                            </Column>
                            <Column width="20%" hAlign="Left" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                <header>
                                    <Text text="Descrição"/>
                                </header>
                            </Column>
                            <Column minScreenWidth="Phone">
                                <header>
                                    <Text text="Data Criação" />
                                </header>
                            </Column>
                            <Column minScreenWidth="Desktop" demandPopin="true">
                                <header>
                                    <Text text="Status" />
                                </header>
                            </Column>
                            <Column hAlign="Right" minScreenWidth="Desktop" demandPopin="true">
                                <header>
                                    <Text text="Bonificação" />
                                </header>
                            </Column>
                            <Column popinDisplay="Inline" demandPopin="true" >
                                <header>
                                    <Text text="St. Fin."/>
                                </header>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem type="Active">
                                <cells>
                                    <Link text="{ID}" press="onShowDetail"/>
                                    <ObjectStatus text="{fornecedor/ID}" />
                                    <ObjectStatus text="{fornecedor/Nome}" wrapping="true" />
                                    <Text text="{Descricao}"  wrapping="true" />
                                    <ObjectStatus text="{
                                        path: 'Data',
                                        type: 'sap.ui.model.type.Date',
                                        formatOptions: { UTC: true, style: 'short' }
                                        }" />
                                    <ObjectStatus text="{status/Descricao}" />
                                    <ObjectNumber number="{
                                        path: 'Bonificacao',
                                        type: 'sap.ui.model.odata.type.Decimal',
                                        constraints: { scale: 2 }
                                        }" unit="BRL" emphasized="false"/>
                                    <Text text="{
                                        parts: [ {path: 'status/ID'} ],
                                        formatter: '.formatter.formatStatusFinancieiro'
                                        }"  />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </items>
            </VBox>
        </f:content>
        <f:footer>
        </f:footer>
    </f:DynamicPage>
            <OverflowToolbar design="auto">
                <content>
                    <ToolbarSpacer/>
                    <Button text="Save" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                    <Button text="Cancel" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                </content>
            </OverflowToolbar>

</mvc:View>
