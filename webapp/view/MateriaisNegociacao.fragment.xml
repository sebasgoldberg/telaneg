<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form">

    <Table 
    keyboardMode="Edit"
    alternateRowColors="true" width="100%" showSeparators="All" growing="false" items="{path:'materiaisNaoCadastrados', templateShareable:true}"
    id="materiaisNegociacaoTable" mode="MultiSelect" 
    visible="{tipoNegociacao/TemCriacaoNaoCadastrados}"
    >
        <headerToolbar>
            <Toolbar width="auto" height="46px" design="Transparent" visible="true" enabled="true">
                <content>
                    <Title text="Materiais NÃ£o Cadastrados" titleStyle="Auto" width="auto" textAlign="Begin" visible="true"/>
                    <ToolbarSpacer width=""/>
                    <Button type="Emphasized" icon="sap-icon://add" press="onAddMaterial"/>
                    <Button icon="sap-icon://delete" press="onDeleteMaterial"/>
                </content>
                <tooltip/>
            </Toolbar>
        </headerToolbar>
        <columns>

            <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="Cod. Material" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                </header>
                <footer/>
            </Column>

            <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="Material" width="auto" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
                </header>
                <footer/>
            </Column>

        </columns>
        <items>
            <ColumnListItem>
                <cells>

                    <ObjectIdentifier title="{
                        path: 'ID',
                        type: 'sap.ui.model.odata.type.String',
                        constraints: {
                            isDigitSequence : true,
                            maxLength : 18
                            }
                        }"
                        text="" titleActive="false" visible="true"/>

                    <Input value="{Nome}" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false" maxLength="0" />

                </cells>
            </ColumnListItem>
        </items>
    </Table>



</core:FragmentDefinition>

