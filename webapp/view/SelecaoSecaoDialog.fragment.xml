<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">

	<SelectDialog
        id="selecaoSecaoDialog"
        contentWidth="400px"
        contentHeight="500px"
        growing="true"
        growingThreshold="30"
        growingScrollToLoad="true"
        multiSelect="true"
        rememberSelections="false"
		noDataText="Seções não encontradas."
		title="Selecionar Seções"
		search="onSearch"
		confirm="onSelecionar"
		cancel="onFechar"
		items="{
			path: 'fornecedor/secoes'
		}" >
		<StandardListItem
			title="{ID}"
			description="{Descricao}"
			type="Active" />
	</SelectDialog>

</core:FragmentDefinition>






