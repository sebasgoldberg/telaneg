<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form">
<Table
                        itemPress="onShowDetail"
                        keyboardMode="Edit"
                        mode="SingleSelectLeft"
                        id="negociacoesPrazoTable"
                        growing="true"
                        growingScrollToLoad="true"
                        growingThreshold="25"
                        items="{
                            path:'',
                            templateShareable:true,
                            parameters: {
                                expand:'fornecedor,comentarioImpressao,bandeira' 
                                }
                            }"
                        >
                        <headerToolbar>
                            <OverflowToolbar design="Transparent">
                                <content>
                                    <Title textAlign="Begin" text="Documentos de {Descricao}"/>
                                    <ToolbarSpacer/>
                                </content>
                            </OverflowToolbar>
                        </headerToolbar>
                        <columns>
                            <Column width="8%" minScreenWidth="Phone">
                                <header>
                                    <Text text="Negociação"/>
                                </header>
                            </Column>
                            
                            <Column width="10%" minScreenWidth="Desktop" demandPopin="true">
                                <header>
                                    <Text text="Fornecedor"/>
                                </header>
                            </Column>
                            <Column width="18%" minScreenWidth="Desktop">
                                <header>
                                    <Text text="Nome"/>
                                </header>
                            </Column>
                            <Column width="18%" hAlign="Left" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false" demandPopin="true" minScreenWidth="Tablet">
                                <header>
                                    <Text text="Descrição"/>
                                </header>
                            </Column>
                            <Column minScreenWidth="Phone">
                                <header>
                                    <Text text="Vencimento" />
                                </header>
                            </Column>
                            <Column minScreenWidth="Phone">
                                <header>
                                    <Text text="Anexos" />
                                </header>
                            </Column>
                            <Column minScreenWidth="Phone" demandPopin="true">
                                <header>
                                    <Text text="Comentário" />
                                </header>
                            </Column>
                            <Column minScreenWidth="Phone" demandPopin="true">
                                <header>
                                    <Text text="Bandeira" />
                                </header>
                            </Column>

                        </columns>
                        <items>
                            <ColumnListItem type="Active">
                                <cells>
                                    <ObjectIdentifier title="{
                                        path: 'ID',
                                        type: 'sap.ui.model.odata.type.String',
                                        constraints: {
                                            isDigitSequence : true,
                                            maxLength : 10
                                            }
                                        }"
                                        />
                                    
                                    <ObjectStatus text="{FornecedorID}" />
                                    <ObjectStatus text="{fornecedor/Nome}" wrapping="true" />
                                    <Text text="{Descricao}"  wrapping="true" />
                                    <ObjectStatus text="{
                                        path: 'ApuracaoAte',
                                        type: 'sap.ui.model.type.Date',
                                        formatOptions: { UTC: true, style: 'short' }
                                        }" />
                                    <HBox>
                                        <Button
                                            enabled="{
                                                parts: [ {path: 'Estipulacao'} ],
                                                formatter: '.formatter.isNotInitial'
                                                }"
                                            icon="sap-icon://attachment" press="onMostrarAnexosEstipulacao"/>
                                        <Button
                                            tooltip="{
                                                parts: [ { path: 'Bandeira'}, { path: 'FornecedorID' } ],
                                                formatter: '.formatter.nomeMinutaPDF'
                                                }"
                                            enabled="{
                                                parts: [ {path: 'Estipulacao'} ],
                                                formatter: '.formatter.isNotInitial'
                                                }"
                                            icon="sap-icon://pdf-attachment" press="onGetPDF"/>
                                    </HBox>
                                    <ObjectStatus text="{comentarioImpressao/Texto}" />
                                    <Text text="{bandeira/Nome}"  wrapping="true" />
                                    
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
</core:FragmentDefinition>
