<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form">
    <form:Form id="infoGeralPrazPagSubSection" visible="false" >
        <form:layout>
            <form:ResponsiveGridLayout labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="3" columnsM="2" singleContainerFullSize="false" breakpointL="800" breakpointM="400"/>
        </form:layout>
        <form:formContainers>
            <form:FormContainer title="">
                <form:formElements>
                    <form:FormElement>
                        <form:label>
                            <Label text="Descrição" required="true"/>
                        </form:label>
                        <form:fields>
                            <Input
                                submit="onSubmit" required="true"
                                liveChange="onLiveChangeDescricao"
                                id="descricaoNegociacaoPrazPagInput"
                                enabled="{view>/isNegociacaoEditavel}"
                                value="{
                                    path: 'Descricao',
                                    type: 'sap.ui.model.odata.type.String',
                                    constraints: { maxLength: 40 }
                                    }" placeholder="Indique aqui alguma descrição" type="Text" showValueHelp="false" />
                        </form:fields>
                    </form:FormElement>
                    <form:FormElement>
                        <form:label>
                            <Label                                
                                text="Bandeira" required="true"/>
                        </form:label>
                        <form:fields>
                            <Input
                                submit="onSubmit" required="true"
                                liveChange="onLiveChangeDescricao"
                                id="BandeiraNegociacaoInput"
                                enabled="{view>/isNegociacaoEditavel}"
                                value="{
                                    path: 'Bandeira',
                                    type: 'sap.ui.model.odata.type.String',
                                    constraints: { maxLength: 40 }
                                    }" placeholder="Selecione a bandeira" type="Text" showValueHelp="false" />
                        </form:fields>
                    </form:FormElement>
                </form:formElements>
            </form:FormContainer>
            <form:FormContainer title="">
                <form:formElements>
                    <form:FormElement>
                        <form:label>
                            <Label text="Fornecedor" required="true"/>
                        </form:label>
                        <form:fields>
                            <Input
                                placeholder="Codigo/Desc." 
                                enabled="{view>/isNegociacaoEditavel}"
                                id="fornecedorNegociacaoPrazPagInput"
                                required="true"
                                value="{FornecedorID}" 
                                showSuggestion="true"
                                suggest="suggestFornecedores"
                                suggestionItems="{/FornecedorSet}"
                                maxSuggestionWidth="500px"
                                showValueHelp="false"
                                >
                                <core:ListItem text="{ID}" additionalText="{Nome}" />
                               <layoutData>
                                    <layout:GridData span="XL4 L4 M4 S4" />
                                </layoutData>
                            </Input>
                            <Input value="{fornecedor/Nome}" enabled="false"/>
                        </form:fields>
                    </form:FormElement>
                    <form:FormElement>
                        <form:label>
                            <Label
                                id="periodoVigenciaDeLabel"
                                text="Período de Vigência De" required="true"/>
                        </form:label>
                        <form:fields>                            
                            <DatePicker
                                id="periodoVigenciaDeDatePicker"
                                value="{
												  		path: 'ApuracaoDe',
												  		type: 'sap.ui.model.type.Date',
														formatOptions: {															
																style: 'medium', UTC: true															
																		}												  		
												  				}"                                 
                                class="sapUiSmallMarginBottom"/>
                        </form:fields>
                    </form:FormElement>
                </form:formElements>
            </form:FormContainer>
            <form:FormContainer title="">
                <form:formElements>
                    <form:FormElement>
                        <form:label>
                            <Label text="Negociador Fornecedor" required="true"/>
                        </form:label>
                        <form:fields>
                            <Input
                                submit="onSubmit" required="true"
                                liveChange="onLiveChangeDescricao"
                                placeholder="Nome do negociador do fornecedor"
                                enabled="{view>/isNegociacaoEditavel}"
                                id="negociadorNegociacaoPrazPagInput"
                                value="{Negociador}"/>
                        </form:fields>
                    </form:FormElement>
                    <form:FormElement>
                        <form:label>
                            <Label
                                id="periodoVigenciaAteLabel"
                                text="Período de Vigência Até" required="true"/>
                        </form:label>
                        <form:fields>
                            <DatePicker
                                id="periodoVigenciaAteDatePicker"
                                value="{
												  		path: 'ApuracaoAte',
												  		type: 'sap.ui.model.type.Date',
														formatOptions: {															
																style: 'medium', UTC: true															
																		}												  		
												  				}"                                                                
                                class="sapUiSmallMarginBottom"/>
                        </form:fields>
                    </form:FormElement>
                </form:formElements>
            </form:FormContainer>
        </form:formContainers>
    </form:Form>
</core:FragmentDefinition>
