<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <ResponsivePopover
        id="novoAcordoPopover"
        title="Criar Acordo"
        class="sapUiPopupWithPadding"
        contentWidth="320px"
        contentHeight="400px"
        placement="Bottom" >

        <beginButton>
            <Button text="Criar" type="Emphasized"
            enabled="{= ${view>/novoAcordo/fornecedor} &amp;&amp; ${view>/novoAcordo/bandeira} &amp;&amp; ${view>/novoAcordo/tipoAbrangencia} ? true : false }"
            press="onCriarAcordo" />
        </beginButton>

        <endButton>
            <Button text="Cancelar" press="onCancelCriarAcordo" />
        </endButton>

        <content>

            <form:SimpleForm
                layout="ResponsiveGridLayout"
                columnsXL="4" columnsL="4" columnsM="2" columnsS="1"
                labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12"
                breakpointL="500" breakpointM="250"
                >
                <core:Title text="" />

                <Label text="Fornecedor" />
                <Input
                    selectedKey="{view>/novoAcordo/fornecedor}"
                    suggest="suggestFornecedores"
                    showSuggestion="true"
                    suggestionItems="{/FornecedorSet}"
                    maxSuggestionWidth="500px"
                    >
                    <suggestionItems>
                        <core:ListItem key="{ID}" text="{Nome}" additionalText="{ID}" />
                    </suggestionItems>
                </Input>

                <Label text="Bandeira" />
                <ComboBox
                    selectedKey="{view>/novoAcordo/bandeira}"
                    items="{/BandeiraSet}"
                    >
                    <core:Item key="{ID}" text="{Nome}" />
                </ComboBox>

                <Label text="Tipo de AbrangÃªncia" />
                <ComboBox
                    selectedKey="{view>/novoAcordo/tipoAbrangencia}"
                    items="{tiposAbrangencia}"
                    >
                    <core:Item key="{ID}" text="{Descricao}" />
                </ComboBox>

            </form:SimpleForm>

        </content>
    </ResponsivePopover>
</core:FragmentDefinition>


