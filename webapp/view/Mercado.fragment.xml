<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form">

    <form:SimpleForm
        layout="ResponsiveGridLayout"
        columnsXL="4" columnsL="4" columnsM="2" columnsS="1"
        labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12"
        breakpointL="500" breakpointM="250"
        >

        <core:Title text="Nosso Pricing" />
            <Label text="Periodo" />
            <ComboBox selectedKey="semana">
                <items>
                    <core:Item text="Última Semana" enabled="true" key="semana"/>
                    <core:Item text="Último Mês" enabled="true" key="mes"/>
                </items>
            </ComboBox>

        <core:Title text="" />
            <Label text="Preço Cenco"/>
            <Text
                text="{path: 'nossoPricing/PrecoCenco', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} BRL"/>
            <Label text="Preço Mercado"/>
            <Text
                text="{path: 'nossoPricing/PrecoMercado', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} BRL"/>

        <core:Title text="" />
            <Label text="IC"/>
            <Text
                text="{path: 'nossoPricing/IC', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} %"/>

        <core:Title text="" />
            <Label text="Margem PDV"/>
            <Text
                text="{path: 'nossoPricing/MargemPDV', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} %"/>

        <core:Title text="Category Review" />
            <Label text="Período Analises" />
            <ComboBox selectedKey="atual">
                <items>
                    <core:Item text="Período Atual" enabled="true" key="atual"/>
                    <core:Item text="Período Anterior" enabled="true" key="anterior"/>
                    <core:Item text="Ano" enabled="true" key="ano"/>
                </items>
            </ComboBox>

        <core:Title text="" />
            <Label text="Venda Mercado"/>
            <Text
                text="{path: 'categoryReview/VendaMercado', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} BRL"/>
            <Label text="Crescimento Mercado"/>
            <Text
                text="{path: 'categoryReview/CrecimentoMercado', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} %"/>
            <Label text="Ranking Mercado"/>
            <Text
                text="{path: 'categoryReview/RankingMercado', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} °"/>

        <core:Title text="" />
            <Label text="Venda Cenco"/>
            <Text
                text="{path: 'categoryReview/VendaCenco', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} BRL"/>
            <Label text="Crecimento Cenco"/>
            <Text
                text="{path: 'categoryReview/CrecimentoCenco', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} %"/>
            <Label text="Market Share Atual"/>
            <Text
                text="{path: 'categoryReview/MarketShareAtual', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} %"/>

        <core:Title text="" />
            <Label text="Margem 1 Atual"/>
            <Text
                text="{path: 'categoryReview/Margem1Atual', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} %"/>
            <Label text="Margem 2 Atual"/>
            <Text
                text="{path: 'categoryReview/Margem2Atual', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} %"/>
            <Label text="Margem 1 Anterior"/>
            <Text
                text="{path: 'categoryReview/Margem1Anterior', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} %"/>
            <Label text="Margem 2 Anterior"/>
            <Text
                text="{path: 'categoryReview/Margem2Anterior', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} %"/>

    </form:SimpleForm>

</core:FragmentDefinition>
