<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="simplifique.telaneg.controller.DetailPage2" xmlns:uxap="sap.uxap" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:block="simplifique.telaneg.view.block">
    <uxap:ObjectPageLayout
        showTitleInHeaderContent="true" showHeaderContent="true" showAnchorBar="true" showFooter="true" subSectionLayout="TitleOnTop"
        headerContentPinnable="true"
        >
        <uxap:headerTitle>

            <uxap:ObjectPageDynamicHeaderTitle primaryArea="Left">
                <!--
                <uxap:breadcrumbs>
                    <Breadcrumbs>
                        <Link text='{NegociacaoID}'/>
                        <Link text='{Item}'/>
                    </Breadcrumbs>
                </uxap:breadcrumbs>
                
                -->
                <uxap:breadcrumbs />

                <uxap:expandedHeading>
                    <Title text="{material/Nome}" wrapping="true" class="sapUiTinyMarginTop"/>
                </uxap:expandedHeading>

                <uxap:snappedHeading>
                    <Title text="{material/Nome}" wrapping="true" class="sapUiTinyMarginTop"/>
                </uxap:snappedHeading>

                <uxap:expandedContent>
                    <Text text="{fornecedor/Nome} --> {CentroID}"/>
                </uxap:expandedContent>

                <uxap:snappedContent>
                    <Text text="{fornecedor/Nome} --> {CentroID}"/>
                </uxap:snappedContent>

                <uxap:actions>
                    <uxap:ObjectPageHeaderActionButton text="Impostos" type="Emphasized" hideText="false"
                        press="onPressImpostos"/>
                </uxap:actions>

            </uxap:ObjectPageDynamicHeaderTitle>

        </uxap:headerTitle>
        <uxap:headerContent>
            <layout:VerticalLayout
                    class="sapUiMediumMarginEnd">
                <core:Fragment fragmentName="simplifique.telaneg.view.IndicadoresItem" type="XML" />
            </layout:VerticalLayout>
        </uxap:headerContent>
        <uxap:sections>

            <uxap:ObjectPageSection showTitle="true" title="Page Section Title" titleUppercase="true" visible="true">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Simulação" mode="Expanded">
                        <uxap:blocks>
                            <core:Fragment fragmentName="simplifique.telaneg.view.Simulacao" type="XML" />
                        </uxap:blocks>
                        <uxap:moreBlocks/>
                        <uxap:actions/>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
                <uxap:customAnchorBarButton/>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection showTitle="true" title="Subitens" titleUppercase="true" visible="true">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Subitens" mode="Expanded">
                        <uxap:blocks>
                            <core:Fragment fragmentName="simplifique.telaneg.view.Subitems" type="XML" />
                        </uxap:blocks>
                        <uxap:moreBlocks/>
                        <uxap:actions/>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
                <uxap:customAnchorBarButton/>
            </uxap:ObjectPageSection>


            <uxap:ObjectPageSection showTitle="true" title="Stock" titleUppercase="true" visible="true">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Stock" mode="Expanded">
                        <uxap:blocks>
                            <core:Fragment fragmentName="simplifique.telaneg.view.Stock" type="XML" />
                        </uxap:blocks>
                        <uxap:moreBlocks/>
                        <uxap:actions/>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
                <uxap:customAnchorBarButton/>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection showTitle="true" title="Vendas" titleUppercase="true" visible="true">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Vendas" mode="Expanded">
                        <uxap:blocks>
                            <core:Fragment fragmentName="simplifique.telaneg.view.Vendas" type="XML"/>
                        </uxap:blocks>
                        <uxap:moreBlocks/>
                        <uxap:actions/>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
                <uxap:customAnchorBarButton/>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection showTitle="true" title="Mercado" titleUppercase="true" visible="true">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Mercado" mode="Expanded">
                        <uxap:blocks>
                            <core:Fragment fragmentName="simplifique.telaneg.view.Mercado" type="XML"/>
                        </uxap:blocks>
                        <uxap:moreBlocks/>
                        <uxap:actions/>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
                <uxap:customAnchorBarButton/>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection showTitle="true" title="Contrato" titleUppercase="true" visible="true">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Contrato" mode="Expanded">
                        <uxap:blocks>
                            <core:Fragment fragmentName="simplifique.telaneg.view.Contrato" type="XML"/>
                        </uxap:blocks>
                        <uxap:moreBlocks/>
                        <uxap:actions/>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
                <uxap:customAnchorBarButton/>
            </uxap:ObjectPageSection>

                <!-- -->
                    </uxap:sections>
        <uxap:footer>
            <Bar design="Auto">
                <contentLeft>
                    <!--
                    <Button text="Aprovar" type="Accept" icon="sap-icon://accept" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onAccept"/>
                    <Button text="Rejeitar" type="Reject" icon="sap-icon://decline" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onReject"/>
                    -->
                    <Button text="Eliminar" type="Reject" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress3"/>
                </contentLeft>
                <contentMiddle/>
                <contentRight>
                    <Switch type="AcceptReject" state="{Aprovado}" />
                    <!--
                    <Button text="Gravar" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="false" iconDensityAware="false" press="onGravar"/>
                    -->
                </contentRight>
            </Bar>
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>
