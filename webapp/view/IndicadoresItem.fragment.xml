                        formatter: '.formatter.warningIfSecondLowThanFirst'
                        }"
                        />
        </layout:VerticalLayout>

        <layout:VerticalLayout
                class="sapUiMediumMarginEnd">
            <Label text="Margem 1"/>
                    <ObjectStatus
                        text="{
                            path: 'simulacao/Margem1',
                            type: 'sap.ui.model.type.Float',
                            formatOptions: { maxFractionDigits: 2 }
                            } %"
                        state="{
                            parts: [ {path: 'simulacao/Margem1'}, {path: 'informacao/MargemTeorica'} ],
                            formatter: '.formatter.margemStatus'
                            }"
                            />
        </layout:VerticalLayout>

        <layout:VerticalLayout
                class="sapUiMediumMarginEnd">
            <Label text="Margem 2" />
                <ObjectStatus
                    text="{
                        path: 'simulacao/Margem2',
                        type: 'sap.ui.model.type.Float',
