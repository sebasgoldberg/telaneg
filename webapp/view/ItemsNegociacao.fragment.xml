<core:FragmentDefinition 
    xmlns:core="sap.ui.core"
    xmlns="sap.ui.table"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <!--
                expand:'material,simulacao,itemOrg,subitem,subitem/impostosEntrada,subitem/impostosSaida',
    -->
    <TreeTable
        id="treeTable"
        selectionMode="Multiple"
        enableColumnReordering="false"
        expandFirstLevel="false"
        rows="{
            path : 'items',
            parameters : {
                expand:'material,simulacao,itemOrg,impostosEntrada,impostosSaida',
                numberOfExpandedLevels: 0,
                treeAnnotationProperties : {
                    hierarchyLevelFor : 'Nivel',
                    hierarchyNodeFor : 'Item',
                    hierarchyParentNodeFor : 'Pai',
                    hierarchyDrillStateFor : 'TipoNo'
                }
            }
        }">

        <toolbar>
            <m:Toolbar>
                <m:ToolbarSpacer/>
                <m:Button icon="sap-icon://add" iconFirst="true" type="Transparent" press="onAdicionarMercadoria" />
                <m:Button text="" icon="sap-icon://delete" iconFirst="false" type="Transparent" press="onEliminarItensSelecionados" />
            </m:Toolbar>
        </toolbar>

        <columns>

            <Column label="{
                parts: [ {path: 'tipoNegociacao/ID'}, {path: 'TipoAbrangencia'} ],
                formatter: '.formatter.formatDescricaoItemOrg'
                }"
                width="10%" >
                <template>
                    <m:Text text="{itemOrg/ID}" wrapping="true" />
                </template>
            </Column>

            <Column label="Mercadoria" width="10%" >
                <template>
                    <m:Text text="{
                        path: 'material/ID',
                        type: 'sap.ui.model.odata.type.String',
                        constraints: {
                            isDigitSequence : true,
                            maxLength : 18
                            }
                        }" wrapping="true" />
                </template>
            </Column>

            <Column label="Descrição" width="25%">
                <template>
                    <m:Text text="{material/Nome}" wrapping="true" />
                </template>
            </Column>

            <Column label="UMV">
                <template>
                    <m:Text text="{material/UMB}" wrapping="true" />
                </template>
            </Column>

            <Column label="Preço Venda"
                tooltip="Preço Venda [BRL]"
                width="10%">
                <template>
                    <m:Input value="{
                        path: 'simulacao/PrecoVenda',
                        type: 'sap.ui.model.odata.type.Decimal',
                        constraints: {
                            precision: 12,
                            scale: 2
                        }
                        }"
                        maxLength="16"
                        textAlign="Right"
                        description=""
                        />
                </template>
            </Column>

            <Column label="PMZ"
                tooltip="Preço Margem Zero [BRL]"
                hAlign="Right"
                >
                <template>
                    <m:Text text="{
                        path: 'simulacao/PMZNovo',
                        type: 'sap.ui.model.odata.type.Decimal',
                        constraints: {
                            precision: 12,
                            scale: 2 }
                        }" wrapping="true" />
                </template>
            </Column>

            <Column label="MP"
                tooltip="Margem PDV [%]"
                hAlign="Right"
                >
                <template>
                    <m:Text text="{
                        path: 'nossoPricing/MargemPDV',
                        type: 'sap.ui.model.odata.type.Decimal',
                        constraints: { scale: 2 }
                        }" wrapping="true" />
                </template>
            </Column>

            <Column label="Recomp." width="10%"
                tooltip="Recomposição [BRL]"
                >
                <template>
                    <m:Input value="{
                        path: 'simulacao/Recomposicao',
                        type: 'sap.ui.model.odata.type.Decimal',
                        constraints: {
                            precision: 12,
                            scale: 2
                            }
                        }"
                        maxLength="16"
                        textAlign="Right"
                        description=""/>
                </template>
            </Column>

            <Column label="M2S"
                tooltip="Margem 2 Simulada [%]"
                hAlign="Right"
                >
                <template>
                    <m:Text text="{
                        path: 'simulacao/Margem2',
                        type: 'sap.ui.model.odata.type.Decimal',
                        constraints: { scale: 2 }
                        }"
                        wrapping="true"
                        />
                </template>
            </Column>

            <Column label="mPM"
                tooltip="Menor Preço de Mercado [BRL]"
                hAlign="Right"
                >
                <template>
                    <m:Text text="{
                        path: 'nossoPricing/PrecoMercado',
                        type: 'sap.ui.model.odata.type.Decimal',
                        constraints: { scale: 2 }
                        }" wrapping="true" />
                </template>
            </Column>

            <Column label="IC"
                tooltip="Indice de Competitividade [%]"
                hAlign="Right"
                >
                <template>
                    <m:Text text="{
                        path: 'simulacao/IC',
                        type: 'sap.ui.model.odata.type.Decimal',
                        constraints: { scale: 2 }
                        }" wrapping="true" />
                </template>
            </Column>

            <Column label="" width="7%">
                <template>
                    <m:HBox>
                    <core:Icon
                        class="sapUiTinyMarginEnd"
                        src="sap-icon://line-chart"
                        size="16px"
                        hoverColor="#386084"
                        tooltip="Vendas"
                        press="onMostrarVendas"
                        />
                    <core:Icon
                        class="sapUiTinyMarginEnd"
                        src="sap-icon://product"
                        size="16px"
                        hoverColor="#386084"
                        tooltip="Estoque"
                        press="onMostrarEstoque"
                        />
                    <core:Icon
                        src="sap-icon://commission-check"
                        size="16px"
                        hoverColor="#386084"
                        tooltip="Impostos"
                        press="onMostrarImpostos"
                        />
                    </m:HBox>
                </template>
            </Column>

        </columns>

    </TreeTable>

</core:FragmentDefinition>

