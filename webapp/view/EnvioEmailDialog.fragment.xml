<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:rich="sap.ui.richtexteditor"
    >
    <Dialog
        id="envioEmailDialog"
        title="{mail>/assunto}"
        contentWidth="650px"
        contentHeight="500px"
        >
	<subHeader>
	</subHeader>

        <beginButton>
            <Button type="Emphasized" text="Enviar" press="onEnviar" />
        </beginButton>

        <endButton>
            <Button text="Cancelar" press="onFechar" />
        </endButton>

        <content>
            <form:SimpleForm
                layout="ResponsiveGridLayout"
                columnsXL="1" columnsL="1" columnsM="1" columnsS="1"
                labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12"
                >

                <Label text="Destinatarios" placeholder="Ingresse os detinatarios separados com ';'" />
                <Input value="{mail>destinatarios}" />

                <Label text="Assunto" placeholder="Ingresse o assunto" />
                <Input value="{mail>assunto}" />

                <Label text="Corpo" placeholder="Escreva o corpo do e-mail." />
                <rich:RichTextEditor
                    editorType="TinyMCE4"
                    width="100%"
                    height="300px"
                    customToolbar="true"
                    showGroupFont="true"
                    value="{mail>corpo}" 
                    />

            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>





