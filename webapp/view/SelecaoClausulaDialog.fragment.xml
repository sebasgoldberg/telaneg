<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">

	<SelectDialog
        id="selecaoClausulaDialog"
        contentWidth="400px"
        contentHeight="500px"
        growing="true"
        growingThreshold="30"
        growingScrollToLoad="true"
        multiSelect="false"
        rememberSelections="false"
		noDataText="Clausulas nÃ£o encontradas."
		title="Selecionar Clausula"
		search="onSearch"
		confirm="onSelecionar"
		cancel="onFechar"
		items="{
			path: 'clausulasPossiveis'
		}" >
		<StandardListItem
			title="{ID}"
			description="{Descricao}"
			type="Active" />
	</SelectDialog>

</core:FragmentDefinition>






