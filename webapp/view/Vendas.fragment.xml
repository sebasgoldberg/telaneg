<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form">

    <form:SimpleForm
        visible="false"
        layout="ResponsiveGridLayout"
        columnsXL="4" columnsL="4" columnsM="2" columnsS="1"
        labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12"
        breakpointL="500" breakpointM="250"
        >


        <core:Title text="Periodo 1" />
            <Label text="De" />
            <DatePicker />

            <Label text="Até" />
            <DatePicker />

        <core:Title text="" />
           <Label text="Valor"/>
            <Text
                text="{path: 'vendaActual/Valor', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} BRL"/>
            <Label text="Quantidade"/>
            <Text
                text="{path: 'vendaActual/Quantidade', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} UN"/>
            <Label text="Margem"/>
            <Text
                text="{path: 'vendaActual/Margem', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} %"/>

        <core:Title text="Periodo 2" />
            <Label text="De" />
            <DatePicker />

            <Label text="Até" />
            <DatePicker />

        <core:Title text="" />
 
            <Label text="Valor"/>
            <Text
                text="{path: '', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} BRL"/>
            <Label text="Quantidade"/>
            <Text
                text="{path: '', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} UN"/>
            <Label text="Margem"/>
            <Text
                text="{path: '', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }} %"/>


    </form:SimpleForm>

    <l:VerticalLayout class="sapUiContentPadding">

    <form:SimpleForm
        layout="ResponsiveGridLayout"
        columnsXL="4" columnsL="4" columnsM="2" columnsS="1"
        labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12"
        breakpointL="500" breakpointM="250"
        >


        <core:Title text="Periodo 1" />
            <Label text="De" />
            <DatePicker dateValue='{view>/venda/selecao/de}'/>

        <core:Title text="" />
            <Label text="Até" />
            <DatePicker dateValue='{view>/venda/selecao/ate}'/>

        <core:Title text="" />
            <Button text="Obter Vendas" press="onObterVenda" />

    </form:SimpleForm>


       <Table alternateRowColors="true" width="100%" showSeparators="All" growing="false" items="{view>/venda/resultado/items}"
            id="vendaTable">
            <columns>
                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="UF Venda" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>
                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="Cod. Material" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>
                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="Material" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>

                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="De" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>

                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="Ate" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>

                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="Valor" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>

                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="Quantidade" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>

                <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                    <header>
                        <Text text="Margem" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    </header>
                    <footer/>
                </Column>

            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <ObjectIdentifier title="{view>CentroID}" text="" titleActive="false" visible="true"/>
                        <ObjectIdentifier title="{
                            path: 'material/ID',
                            type: 'sap.ui.model.odata.type.String',
                            constraints: {
                                isDigitSequence : true,
                                maxLength : 18
                                }
                            }"
                            text="" titleActive="false" visible="true"/>

                        <Text text="{view>material/Nome}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"/>

                        <ObjectIdentifier title="{path: 'view>De', type: 'sap.ui.model.type.Date', formatOptions: { UTC: true, style: 'short' }}" />
                        <ObjectIdentifier title="{path: 'view>Ate', type: 'sap.ui.model.type.Date', formatOptions: { UTC: true, style: 'short' }}" />

                        <ObjectNumber
                            number="{path: 'view>Valor', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}"
                            unit="BRL" emphasized="true"
                            />

                        <ObjectNumber
                            number="{path: 'view>Quantidade', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}"
                            unit="UN" emphasized="true"
                            />

                        <ObjectNumber
                            number="{path: 'view>Margem', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}"
                            unit="%" emphasized="true"
                            />

                    </cells>
                </ColumnListItem>
            </items>
        </Table>

    </l:VerticalLayout>


</core:FragmentDefinition>


